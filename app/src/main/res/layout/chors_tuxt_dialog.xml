<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/coloryellownew"
    android:id="@+id/layout">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtView_4tuxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="4 paper (10,D,K)"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size" />

            <ImageButton
                android:id="@+id/btn_4paper_minus"
                android:layout_width="@dimen/plus_minus_Btn_width"
                android:layout_height="@dimen/plus_minus_Btn_height"
                android:layout_gravity="center"
                android:background="@drawable/btn_score"
                android:src="@drawable/ic_remove_yelow_24dp" />

            <TextView
                android:id="@+id/txtView_terz_Qanak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:padding="5dp"
                android:text="1"
                android:textSize="25sp"
                />

            <ImageButton

                android:id="@+id/btn_4paper_plus"
                android:layout_width="@dimen/plus_minus_Btn_width"
                android:layout_height="@dimen/plus_minus_Btn_height"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_score"
                android:src="@drawable/ic_add_yelow_24dp" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/colorBlack" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="4 paper T"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="61dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/colorBlack" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="4 paper 9"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size" />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="61dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/colorBlack" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="4 paper V"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/card_text_size" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="61dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/colorBlack" />


        <ImageButton
            android:id="@+id/ImgBtn_Ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="@drawable/btn_score"
            android:gravity="center"
            android:padding="15dp"
            android:src="@drawable/ic_check_yelow_24dp" />

    </LinearLayout>





</LinearLayout>