                <Button
                    android:id="@+id/btn_blot_minus"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/btn_score"
                    android:text="-"
                    android:textColor="@color/coloryellownew"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintStart_toEndOf="@+id/txtView_terz_Qanak"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtView_blot_Qanak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20sp"
                    android:padding="10dp"
                    android:text="0"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/Btn_terz_minus"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/Btn_blot_plus"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginEnd="20sp"
                    android:background="@drawable/btn_score"
                    android:text="+"
                    android:textColor="@color/coloryellownew"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/txtView_terz"
                    app:layout_constraintTop_toBottomOf="@+id/chckBx_blot" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
