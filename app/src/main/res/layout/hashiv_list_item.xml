<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ResultLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/coloryellownew"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtView_kom1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="33"
            android:gravity="center"
            android:hint="0"
            android:onClick="open_extra_buttons_Team1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtView_kom2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="33"
            android:gravity="center"
            android:hint="0"
            android:onClick="open_extra_buttons_Team2"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/Img_mast"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:onClick="open_extra_Order_buttons"
            android:src="@drawable/x_24" />

        <TextView
            android:id="@+id/txtView_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="22"
            android:ems="2"
            android:gravity="center_vertical"
            android:hint="@string/order"
            android:onClick="open_extra_Order_buttons"
            android:textSize="20sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorBlack60" />


</LinearLayout>
